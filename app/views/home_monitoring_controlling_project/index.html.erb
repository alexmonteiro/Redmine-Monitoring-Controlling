	<!-- Search parameters -->
	<%= form_for "rmcsearch", :method => :post, :html => { :class => 'form' } do |f| %>
		<h3><%= t(:search) %></h3>
		<div class="tabular">
		<p>
		  <label><%= t(:issues) + " :" %></label>
		  <%= check_box_tag "rmcsearch[only_main_project]", true, ( params[:rmcsearch] && params[:rmcsearch][:only_main_project] ? true : false ) %> <%= t :only_main_project %>
		</p>
					
		<%if @project.versions.count > 0 %>
		  <p>
		    <label><%= t(:version) + " :"%></label>
			<%= f.collection_select(:version, @project.versions,
						                  :id, :name, {:prompt => 'Please select version', :selected => ((params[:rmcsearch] && params[:rmcsearch][:version]) ? params[:rmcsearch][:version] : nil) })%> 
		  </p>
		<%end%>
		<% if @years.count > 0 %>
		  <p>
		    <label><%= t(:years) + " :"%></label>
		    <%= f.collection_select(:year, @years,
										:to_i, :to_s, 
										{:prompt =>'Please select a year', :selected => ((params[:rmcsearch] && params[:rmcsearch][:year]) ? params[:rmcsearch][:year] : nil)}) %>
	 	  </p>
		<% end %>

	    <p>
	      <button type="submit" class="btn btn-mini">
		    <i class="icon-user icon-refresh"></i> <%= t(:actualize) %>
		  </button>
	    </p>
		</div> 
	<%end%>
